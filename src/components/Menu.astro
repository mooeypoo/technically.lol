---
import MenuItem from "../components/MenuItem.astro";

const { page } = Astro.props;
---
<div class="menu">
  <MenuItem icon="js" name="index" text="about_me.js" currentPage={page}></MenuItem>
  <MenuItem icon="html" name="videos" text="funny_videos.html" currentPage={page}></MenuItem>
  <MenuItem icon="css" name="invite" text="invite_me_to_your_event.css" currentPage={page}></MenuItem>

</div>

<style lang="scss">
  .menu {
    position: fixed;
    top: 10em;
    left: 0;
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    justify-content: center;
    gap: 1.5em;

    @media screen and (max-width: 950px) {
      top: 8em;
      gap: 1em;
    }

    @media screen and (max-width: 400px) {
      top: 6em;
      gap: 0.5em;
    }


  }
</style>