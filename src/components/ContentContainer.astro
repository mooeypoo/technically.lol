<div class="content-container">
  <slot></slot>
</div>

<style lang="scss">
  .content-container {
    // border: 1px solid #f1f1f1;
    display: flex;
    position: fixed;
    top: 14em;
    left: 30em;
    overflow: auto;
    flex-direction: column;
    align-items: center;
    height: 100vh;
    // 30em = left; 2em = margin right
    width: calc(100% - 30em - 2em);
    // 14em = top; 2em = margin bottom
    height: calc(100vh - 14em - 2em);

    @media screen and (max-width: 950px) {
      // 30em = left; 2em = margin right
      width: calc(100% - 25em - 2em);
      // 12em = top; 2em = margin bottom
      height: calc(100vh - 12em - 2em);
      left: 25em;
      top: 12em;
    }

    // Midway point where the content is too narrow
    @media screen and (max-width: 750px) {
    // @media screen and (max-width: 400px) {
      // 1em = left; 1em = margin right
      width: calc(100% - 1em - 1em);
      left: 1em;
      top: 10em;
    }
}
</style>