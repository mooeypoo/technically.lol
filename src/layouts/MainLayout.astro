---
import Logo from "../components/Logo.astro";
import Menu from "../components/Menu.astro";
import ContentContainer from "../components/ContentContainer.astro";
const { pageName, align } = Astro.props;
// import { Debug } from 'astro:components';
import { SEO } from "astro-seo";

const who = Astro.url.searchParams.get('scale')! || 'general';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" 
      type="image/png" 
      href="/favicon.png">
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<SEO
      title="Moriel Schottlender: Technically Funny"
      description="A very funny website for a technically funny engineer comic."
      openGraph={{
        basic: {
          title: "Moriel Schottlender: Technically Funny",
          type: "website",
          image: "https://technically.lol/moriel.png",
        }
      }}
      twitter={{
        creator: "@jonasmerlins1"
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/favicon.ico" }],
        // extending the default meta tags
        meta: [
          {
            name: "twitter:image",
            content: "https://technically.lol/moriel.png",
          },
          { name: "twitter:title", content: "Moriel Schottlender: Technically Funny" },
          { name: "twitter:description", content: "Agent" },
        ],
      }}
    />
		<title>Moriel Schottlender: Technically Funny</title>
	</head>
	<body>
		<Logo />
		<Menu pageName={pageName}/>
		<ContentContainer align={align} who={who}>
      <slot />
		</ContentContainer>
		<div class="moriel-corner"></div>
	</body>
</html>

<style lang="scss" is:global>
	body {
		background-color: #22191f;
		color: #fff;
		margin: 0;
		padding: 2em;
	}

	a {
		color: #fff;
		text-decoration: none;

		&:hover {
			text-decoration: underline;
		}

		&[target="_blank"]::after {
			content: "[â†—]";
			font-size: 0.5em;
			vertical-align: super;
			padding-left: 0.2em;
		}
	}

	.content-container {
		a {
			text-decoration: underline;
		}

		.contact-me {
			margin-top: 2em;
			text-align: center;
			padding: 1em 0;
			border-top: #ff3399 1px solid;
			border-bottom: #ff3399 1px solid;
		}

		p {
			margin: 1em 0 0;
		}

	}

	.emphasis {
		font-weight: bold;
		font-size: 1.2em;
	}

	.smaller {
		font-size: 0.8em;
	}

	.moriel-corner {
		position: fixed;
		bottom: 0;
		left: 0;
		height: 700px;
		width: 700px;
		background-image: url(/src/assets/moriel-corner.png);
    background-size: contain;
    background-repeat: no-repeat;
		z-index: -1;

		@media screen and (max-width: 950px) {
			width: 600px;
			height: 600px;
		}

		// Midway point where the content is too narrow
    @media screen and (max-width: 750px) {
			opacity: 0.4;
		}

		@media screen and (max-width: 400px) {
			width: 350px;
			height: 350px;
		}
	}

	/* Global */
	.rainbow {
		font-weight: bold;
		animation: colorRotate 1s linear 0s infinite;
	}

	@keyframes colorRotate {
		from {
			color: #6666ff;
		}
		10% {
			color: #0099ff;
		}
		50% {
			color: #ff5eff;
		}
		75% {
			color: #ff3399;
		}
		100% {
			color: #6666ff;
		}
	}
</style>